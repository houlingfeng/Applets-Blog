<!--pages/moviesDetail/moviesDetail.wxml-->
<view class="movieDetailContainer">
  <image class="movieDetailImg" src="{{movieDetail.images.large}}"></image>
  <text class="movieDetailName">{{movieDetail.original_title}}</text>
  <view class="movieDetail_detail">
    <text>评分：{{movieDetail.rating.average}}</text>
    <text>导演：{{movieDetail.directors[0].name}}</text>
    <text>主演：{{movieDetail.casts[1].name}}</text>
  </view>
  <button>我要观影</button>
</view>
